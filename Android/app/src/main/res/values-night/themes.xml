<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BoredApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorDark</item>
        <item name="colorPrimaryVariant">@color/colorDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorDark</item>
        <item name="colorSecondaryVariant">@color/colorDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme_Dialog" parent="Theme.BoredApp">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorTransparent45</item>
    </style>
</resources>